<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.siokagami.application.mytomato.view.TomatoWorkFragment">

    <TextView
        android:id="@+id/tv_tomato_work_head"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:textSize="18sp"
        android:textColor="@color/black"
        android:text="您正在"/>
    <TextView
        android:id="@+id/tv_tomato_work_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/tv_tomato_work_head"
        android:textColor="@color/black"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="10dp"
        android:textSize="24sp"
        android:text="写代码"/>

    <TextView
        android:id="@+id/tv_tomato_work_count"
        android:layout_below="@+id/tv_tomato_work_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="00:20"
        android:textSize="72sp"
        android:layout_centerHorizontal="true"
        android:textColor="@color/colorPrimaryDark"
        android:layout_marginTop="30dp"/>
    <CheckBox
        android:id="@+id/cb_tomato_work_control"
        android:layout_below="@+id/tv_tomato_work_count"
        android:layout_width="72dp"
        android:layout_height="72dp"
        android:button="@null"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="54dp"
        android:background="@drawable/icon_play"/>
    <TextView
        android:id="@+id/tv_x"
        android:text="x"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black" />
    <TextView
        android:layout_below="@id/tv_x"
        android:text="y"
        android:id="@+id/tv_y"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black" />
    <TextView
        android:text="z"
        android:layout_below="@id/tv_y"
        android:id="@+id/tv_z"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/black" />
</RelativeLayout>
